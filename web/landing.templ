	color: var(--color-secondary);
	padding: 0.5rem 1rem;
	border-radius: var(--border-radius);
	display: inline-block;
	cursor: pointer;
	transition: background-color 0.3s;
	box-shadow: var(--box-shadow);
	text-decoration: none;
}


package web

css landing() {
	background-color: var(--color-secondary);
	color: var(--color-primary);
	padding: 1rem;
	border-radius: var(--border-radius);
	min-height: 82vh;
	font-size: var(--font-size);
	box-shadow: var(--box-shadow);
}

css cta() {
